generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Character {
  id          String    @id @default(nanoid())
  name        String    @unique
  description String
  image       String
  messages    Message[]
}

model Message {
  id          String    @id @default(nanoid())
  content     String
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
  createdAt   DateTime  @default(now())
}
