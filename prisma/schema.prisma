generator client {
  provider = "prisma-client"
  output = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Character {
  id           String    @id @default(nanoid())
  name         String
  description  String
  image        String
  basePrompt   String
  greetingText String
  messages     Message[]
}

model Message {
  id          String    @id @default(nanoid())
  content     String
  role        String    @default("user") // 'model' , 'user'
  sender      String    @default("user")
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
  createdAt   DateTime  @default(now())
}